filterblur(radius)
	-webkit-filter blur(radius);
	-moz-filter blur(radius);
	-o-filter blur(radius);
	-ms-filter blur(radius);
	filter blur(radius);

opaque()
	opacity 1 !important
	filter "alpha(opacity=100)" !important
	-ms-filter "alpha(opacity=100)" !important

transparent()
	opacity 0 !important
	filter "alpha(opacity=0)" !important
	-ms-filter "alpha(opacity=0)" !important

quickfade()
	-webkit-transition: opacity .2s ease-in-out, background-color .2s ease-in-out;
	-moz-transition: opacity .2s ease-in-out, background-color .2s ease-in-out;
	-o-transition: opacity .2s ease-in-out, background-color .2s ease-in-out;
	transition: opacity .2s ease-in-out, background-color .2s ease-in-out;

html, body
	margin 0 auto
	padding 0
	overflow hidden
	white-space nowrap

body
	font 14px "Open Sans", Helvetica, Arial, sans-serif
	background-image url('/images/morning_dew.jpg')
	background-size cover

a
	text-decoration none

#upload, #backwrapper
	position absolute
	top 0
	left 0
	height 100%
	width 100%
	display inline-block

#backwrapper
	filterblur 12px

#back
	background-image url('/images/morning_dew.jpg')
	background-size cover
	height 100%
	width 100%
	display inline-block


#upload
	text-align center
	vertical-align middle

#uploadguide
	color rgba(0, 0, 0, .4)
	display inline-block
	position absolute
	top calc(50% - 64px)
	left 0
	width 100%
	font-size 128px
	line-height 128px
	text-shadow 0 0 0 2px rgba(24, 24, 24, .5)

#preview
	color rgba(240, 240, 240, .6)
	position absolute
	bottom 0
	left 0
	height 50px
	width 100%
	border-top 1px solid rgba(240, 240, 240, .2)
	overflow auto
	//overflow-y hidden
	//white-space nowrap

.dz-preview
	color rgba(240, 240, 240, .6)
	height 40px
	//margin 0 5px 0 5px
	padding 0 5px 0 5px
	float right
	display inline-block
	quickfade()

.dz-preview:hover
	background rgba(240, 240, 240, .2)

.dz-preview:active
	background rgba(240, 240, 240, .4)

.dz-progress, .dz-success-mark, .dz-error-mark, .dz-error-message
	display none

.mCSB_dragger_bar
	background rgba(240, 240, 240, .6) !important

.mCSB_dragger
	quickfade()

.mCSB_scrollTools, .mCSB_scrollTools:hover
	opaque()

.mCSB_scrollTools .mCSB_dragger
	transparent()

.mCS-autoHide:hover .mCSB_dragger
	opaque()
